{
  "name": "orcid-utils",
  "version": "1.1.2",
  "description": "Validates and formats ORCID numbers",
  "main": "lib/orcid.min.js",
  "types": "lib/orcid.d.ts",
  "scripts": {
    "build": "tsc src/orcid.ts --declaration --declarationMap --outDir lib",
    "minify": "esbuild src/orcid.ts --minify --sourcemap --format=cjs --outfile=lib/orcid.min.js --target=chrome90,edge91,firefox89,ios14.0,safari14,node12 --analyze",
    "test": "jest",
    "lint": "eslint --report-unused-disable-directives src/*.ts test/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexswilliams/orcid-utils.git"
  },
  "keywords": [
    "orcid",
    "uk",
    "academic",
    "identifier",
    "utils",
    "formatter",
    "checker",
    "validator"
  ],
  "author": "Alex Williams <lexw@live.co.uk> (https://github.com/alexswilliams)",
  "license": "MIT",
  "bugs": "https://github.com/alexswilliams/orcid-utils/issues",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "esbuild": "^0.14.9",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
