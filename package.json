{
  "name": "orcid-utils",
  "version": "1.0.6",
  "description": "Validates and formats ORCID numbers",
  "main": "lib/orcid.min.js",
  "types": "lib/orcid.d.ts",
  "scripts": {
    "build": "tsc src/orcid.ts --declaration --declarationMap --outDir lib",
    "minify": "esbuild src/orcid.ts --minify --sourcemap --format=cjs --outfile=lib/orcid.min.js --target=chrome90,edge91,firefox89,ios14.0,safari14,node12",
    "test": "jest",
    "lint": "eslint --report-unused-disable-directives src/*.ts test/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexswilliams/orcid-utils.git"
  },
  "keywords": [
    "orcid",
    "uk",
    "academic",
    "identifier",
    "utils",
    "formatter",
    "checker",
    "validator"
  ],
  "author": "Alex Williams <lexw@live.co.uk> (https://github.com/alexswilliams)",
  "license": "MIT",
  "bugs": "https://github.com/alexswilliams/orcid-utils/issues",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "esbuild": "^0.12.15",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
